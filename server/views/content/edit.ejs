<h1 class="mb-5">Edit Contact </h1>

<div id="messageArea"></div>

<div class="row justify-content-lg-center g-3">

    <form class="col-lg-6 col-md-10 col-sm-10" method="post" >

        <div class="input-group mb-3">
            <span class="form-label">Full Name </span>
            <input type="text" class="form-control"
                   value="<%= contact.fullName%>"
                   aria-describedby="Full Name" aria-label="Full Name Input" required>

        </div>
        <div class="input-group mb-3">
            <span class="form-label">Contact Number </span>
            <input type="tel" class="form-control"
                   value="<%= contact.ContactNumber%>"
                   aria-describedby="Contact Number" aria-label="Contact Number" required>

        </div>

        <div class="input-group mb-3">
            <span class="form-label">Email Address </span>
            <input type="email" class="form-control"
                   value="<%= contact.EmailAddress%>"
                   aria-describedby="emailAddress" aria-label="Email Address Input" required>

        </div>

<% if (page === 'Edit Contact'){%>
        <button id="editButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
        <% }else{ %>
        <button id="cancelButton" type="reset"
                class="btn btn-warning"><i class="fa-solid fa-ban"></i> Cancel</button>
        <% }else{ %>
        <a href ='/contact-list' id="cancelButton" type="reset"
           class="btn btn-warning"><i class="fa-solid fa-ban"></i> Cancel</a>
        <% } %>
    </form>

</div>